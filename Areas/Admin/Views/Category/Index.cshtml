@model List<CategoryListModel>




<a asp-action="Create" asp-controller="Category" class="btn btn-outline-info btn-sm my-2">Kategori Ekle</a>
<table class="table table-bordered table-hover table-sm">
    <tbody>
        <tr>
            <th>Ad</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn-sm" >Sil</a>
                </td>
            </tr>
        } 
    </tbody>
</table>