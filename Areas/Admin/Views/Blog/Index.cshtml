@model List<BlogListModel>

<a asp-action="Create" asp-controller="Blog" class="btn btn-outline-info btn-sm my-2">Blog Ekle</a>
<table class="table table-bordered table-hover table-sm">
    <tbody>
        <tr>
            <th>Başlık</th>
            <th>Kategori işlemleri</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-action="AssignCategory" asp-route-id="@item.Id">Kategori Ata</a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn-sm" >Sil</a>
                </td>
            </tr>
        } 
    </tbody>
</table>